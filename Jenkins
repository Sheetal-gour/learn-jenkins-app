pipeline {
    agent any

    stages {

         stage('Build') {
            steps {
                echo 'Hello World from docker container'
                sh '''                
                ls -ltra
                npm cache clean --force
                npm ci
                npm install
                npm run build
                '''
            }
        }
       stage('Test') {
            agent {
              docker {
                 image 'node:18-alpine'
                  reuseNode true
              }
             }
            steps{
               sh '''
                npm test
            '''
        }
        post {
          junit 'test-results/junit.xml'
        }
}
}
}
