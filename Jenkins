pipeline {
    agent any

    stages {
         stage('Build') {
            agent {
                docker {
                    image 'node:22-alpine'
                    reuseNode true
                }
            }
            steps {

                echo 'Hello World from docker container'
                sh '''

                ls -ltr
                whoami
                chown -R 131:140 "/.npm"
                npm cache clean --force
                npm install --loglevel=verbose
                npm run build
                '''
            }
        }
    }
}
