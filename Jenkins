pipeline {
    agent any

    stages {
         stage('Build') {
            agent {
                docker {
                    image 'node:22-alpine'
                    reuseNode true
                }
            }
            steps {
                echo 'Hello World from docker container'
                sh '''
                ls -ltra /
                npm config set cache /tmp
                
                ls -ltra
                npm cache clean --force
                npm ci
                npm install
                npm run build
                '''
            }
        }
    }
}
