pipeline {
    agent any

    stages {
         stage('Build') {
            steps {
                echo 'Hello World from docker container'
                sh '''                
                ls -ltra
                npm cache clean --force
                npm ci
                npm install
                npm run build
                '''
            }
        }
       }
       stage('Test') {
              steps{
               sh '''
               npm test -- --watchAll=false

            '''
        }
        }
}
